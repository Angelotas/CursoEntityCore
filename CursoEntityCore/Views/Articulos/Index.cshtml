@model IEnumerable<CursoEntityCore.Models.Articulo>
@{
    ViewData["Title"] = "Lista Artículos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-3">
        <h3>Lista de artículos</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear artículo</a>
    </div>
    <div class="col-3">
        <a asp-action="CrearMultipleOption2" class="btn btn-secondary form-control">Crear Multiple (2 artículos)</a>
        <br />
        <br />
        <a asp-action="CrearMultipleOption5" class="btn btn-secondary form-control">Crear Multiple (5 artículos)</a>
        <br />
        <br />
        <a asp-action="CrearMultiplesCategorias" class="btn btn-secondary form-control">Crear Multiple desde Vista</a>
    </div>
    <div class="col-3">
        <a asp-action="BorrarMultiplesCategorias2" class="btn btn-warning form-control">Eliminar Multiple (2 categorias)</a>
        <br />
        <br />
        <a asp-action="BorrarMultiplesCategorias5" class="btn btn-warning form-control">Eliminar Multiple (5 categorias)</a>
    </div>
</div>
<br />
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(a => a.Articulo_Id)</th>
                <th>@Html.DisplayNameFor(a => a.TituloArticulo)</th>
                <th>@Html.DisplayNameFor(a => a.Descripcion)</th>
                <th>@Html.DisplayNameFor(a => a.Fecha)</th>
                <th>@Html.DisplayNameFor(a => a.Calificacion)</th>
                <th>@Html.DisplayNameFor(a => a.Categoria_Id)</th>
                <th>Acciones</th>
            </tr>
            @foreach (var articulo in Model)
            {
                <tr>
                    <td>@articulo.Articulo_Id</td>
                    <td>@articulo.TituloArticulo</td>
                    <td>@articulo.Descripcion</td>
                    <td>@articulo.Fecha</td>
                    <td>@articulo.Calificacion</td>
                    <td>@articulo.Categoria_Id</td>
                    <td>
                        <a class="btn btn-primary text-whtie" asp-action="Editar" asp-route-id="@articulo.Articulo_Id">Editar</a>
                        <a class="btn btn-danger text-whtie" asp-action="Borrar" asp-route-id="@articulo.Articulo_Id">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay artículos</p>
    }
</div>