@model IEnumerable<CursoEntityCore.Models.Categoria>
@{
    ViewData["Title"] = "Lista Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-3">
        <h3>Lista de categorias</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear categoria</a>
    </div>
    <div class="col-3">
        <a asp-action="CrearMultipleOption2" class="btn btn-secondary form-control">Crear Multiple (2 categorias)</a>
        <br />
        <br />
        <a asp-action="CrearMultipleOption5" class="btn btn-secondary form-control">Crear Multiple (5 categorias)</a>
        <br />
        <br />
        <a asp-action="CrearMultiplesCategorias" class="btn btn-secondary form-control">Crear Multiple desde Vista</a>
    </div>
    <div class="col-3">
        <a asp-action="BorrarMultiplesCategorias2" class="btn btn-warning form-control">Eliminar Multiple (2 categorias)</a>
        <br />
        <br />
        <a asp-action="BorrarMultiplesCategorias5" class="btn btn-warning form-control">Eliminar Multiple (5 categorias)</a>
    </div>
</div>
<br />
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>Nombre de categorias</th>
                <th>Fecha de creación</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Name</td>
                    <td>@categoria.FechaCreacion</td>
                    <td>@categoria.Activo</td>
                    <td>
                        <a class="btn btn-primary text-whtie" asp-action="Editar" asp-route-id="@categoria.Id">Editar</a>
                        <a class="btn btn-danger text-whtie" asp-action="Borrar" asp-route-id="@categoria.Id">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay categorias</p>
    }
</div>